        //     }
        //     oReq.open("POST", "test.php");
        //     oReq.send(formData); 
        //     return false;
        // } 
        $(document).ready(function(){
        	$("#submit").on("click",function(){
                var formdata = new FormData($('#form1')[0]);
                $.ajax({
                    url: 'test.php',
                    type: 'POST',
                    cache: false,//cache设置为false，上传文件不需要缓存。
                    data: formdata,
                    processData: false,//processData设置为false。因为data值是FormData对象，不需要对数据做处理。
                    contentType: false,//contentType设置为false。因为是由<form>表单构造的FormData对象，
                                       //且已经声明了属性enctype="multipart/form-data"，所以这里设置为false。
                    success: function(data){
                        var json=JSON.parse(data);
                        var result = '';
                        // result += 'name=' + ret['name'] + '<br>';
                        // result += 'gender=' + ret['gender'] + '<br>';
                        result += '<img src="' + json['photo'] + '" width="100">';
                        $('#result').html(result);
                    },
                    error: function(XMLHttpRequest, textStatus, errorThrown){
                        alert(XMLHttpRequest.status);
                        alert(XMLHttpRequest.readyState);
                        alert(textStatus);
                    }
                });

            });   
        });
    </script>
